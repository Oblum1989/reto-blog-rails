<div class="container">
  <div class="row">
    <div class="col-12">
      <div>
        <h1 class="display-4">Products</h1>
        <div>
          <%= link_to 'Nuevo Producto', new_product_path, class: "btn btn-primary" %>
        </div>
        <table class="table">
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categoria</th>
            <th></th>
          </tr>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= categorias = product.categories.map{|p| p.name}.join(",") %></td>
            <td>
              <%= link_to  "Editar", edit_product_path(product) %>
              <%= link_to  "Delete", product, method: :delete, data:{confirm: "Esta seguro de eliminar este blog?"} %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>